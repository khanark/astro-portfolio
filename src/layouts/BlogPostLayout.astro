---
import { Image } from "astro:assets";
import Typography from "../components/react/Typography";
import layout from "../constants/style";
import { formatDate } from "../utils/utils";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
const { title, description, date, category, author, image } = frontmatter;
---

<Layout {title}>
  <section class=`${layout.section.dark}`>
    <div class=`${layout.maxWidthSecondary}`>
      <header class="text-center">
        <span
          class="inline-block px-3 py-2 bg-cyan-700 mb-8 text-white rounded-md uppercase tracking-wide font-semibold text-sm"
        >
          {category}
        </span>
        <Typography variant="h2" className="!text-3xl !mb-2">
          {title}
        </Typography>
        <Typography className="!mb-16">
          by <span class="font-bold text-lg">{author}</span> on {
            formatDate(date)
          }
        </Typography>
        <Image
          width={1200}
          height={600}
          quality={80}
          format="avif"
          src={image.src}
          alt={image.alt}
          class="mb-16"
        />
        <Typography className="!text-2xl !mb-4 font-semibold">
          {description}
        </Typography>
      </header>
      <div class="post-content">
        <div class="content">
          <slot />
        </div>
        <div class="side-bar"></div>
      </div>
    </div>
  </section>
</Layout>
