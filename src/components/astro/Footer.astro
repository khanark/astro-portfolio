---
import { pageContent } from "../../constants/constants";
import layout, { style } from "../../constants/style";
import Typography from "../react/Typography";

import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class=`${layout.section.light} !py-28 z-10 relative flex justify-center`
>
  <div class="flex justify-center flex-col gap-6">
    <button
      id="btn-to-top"
      class="hover:bg-cyan-500 transition duration-300 -translate-x-[50%] absolute w-12 h-12 left-1/2 -top-6 z-30 rounded-full bg-cyan-600"
    >
      <i class="fa-solid fa-angle-up" class="text-2xl text-white"></i>
    </button>
    <Typography
      variant="p"
      className="relative z-1 after:-bottom-3 after:left-1/2 after:translate-x-[-50%] after:absolute after:w-12 after:h-[2px] after:z-30 after:bg-cyan-600"
    >
      <span class=`${style.textPrimary} text-xl font-bold`
        >{t("footer.thanks")}</span
      >{t("footer.folks")}
    </Typography>
    <div class="mx-auto flex gap-4">
      {
        pageContent.socialLinks.map((link) => (
          <a href={link.link} target="_blank">
            <i
              class={`fa-brands ${link.iconName} cursor-pointer text-3xl  text-gray-800 transition duration-300 hover:-translate-y-1 hover:text-gray-600 dark:text-gray-300 dark:hover:text-gray-500`}
            />
          </a>
        ))
      }
    </div>
  </div>
</section>

<script>
  const btn = document.getElementById("btn-to-top");
  btn?.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      left: 0,
      behavior: "smooth",
    });
  });
</script>
