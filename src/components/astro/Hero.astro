---
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { pageContent } from '../../constants/constants';
import layout, { style } from '../../constants/style';
import Typography from '../react/Typography';
import ProgrammingAnimation from '../../assets/programming-animate.svg';
import Button from '../react/Button';
---

<section
    class=`${layout.maxWidth} relative flex flex-col justify-between gap-14 py-28 sm:flex-row md:pb-28 md:pt-16`
>
    <div class="flex flex-col items-center justify-between sm:items-start">
        <Typography variant="h1">
            Borislav <br /> Godumov.
        </Typography>
        <div class="flex gap-4">
            {
                pageContent.socialLinks.map((link) => (
                    <a href={link.link} target="_blank">
                        <FontAwesomeIcon
                            icon={link.icon}
                            className="cursor-pointer text-2xl  text-gray-800 transition duration-300 hover:-translate-y-1 hover:text-gray-600 dark:text-gray-300 dark:hover:text-gray-500"
                        />
                    </a>
                ))
            }
        </div>
    </div>
    <div
        class="absolute left-1/3 top-[75%] -z-[1] hidden w-2/3 -translate-x-1/3 -translate-y-1/2 opacity-60 md:block"
    >
        <img src={ProgrammingAnimation} alt="programmer" />
    </div>
    <a
        href="https://storyset.com/web"
        target="_blank"
        class=`${style.textSecondary} absolute bottom-0 left-0 hidden items-center gap-1 p-2 text-xs transition-all duration-300 hover:gap-2 md:flex`
    >
        <span>Web illustrations by Storyset</span>
        <FontAwesomeIcon icon={pageContent.arrowRight} client:load />
    </a>
    <div class="relative z-[1] flex w-full flex-col sm:max-w-[350px]">
        <Typography variant="span">- Introduction(text);</Typography>
        <div class="absolute top-8 w-1/2 h-px bg-cyan-600"></div>
        <div class="absolute top-8 w-px h-1/2 bg-cyan-600"></div>
        <div
            class="flex pl-4 pt-4 flex-1 flex-col items-center justify-between sm:items-start"
        >
            <div
                class=`absolute -left-1/2 -top-[90px] -z-[1] h-[400px] w-[400px] rounded-full opacity-30`
                style={{
                    background: `radial-gradient(circle, #155e75, transparent)`,
                    filter: 'blur(40px)',
                }}
            >
            </div>
            <Typography variant="h2">
                Software Developer based in Sofia, Bulgaria.
            </Typography>
            <Typography>
                Driven by the ever-evolving nature of technology, I embrace the
                challenge of staying current with the latest trends and
                techniques.
            </Typography>
        </div>
        <a
            href="path/to/your/file.ext"
            download="filename.ext"
            class="mx-auto sm:mx-0 inline-flex mt-4 w-max items-center gap-3 rounded-md bg-gradient-to-br from-cyan-600 to-cyan-900 px-8 py-4 text-white transition-transform duration-300 hover:scale-105"
        >
            <FontAwesomeIcon
                icon={pageContent.utilityIcons.download}
                client:only
            />
            <span>Take a look at my CV</span>
        </a>
    </div>
</section>
