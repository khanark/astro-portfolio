---
import layout from "../../constants/style";
import Typography from "../react/Typography";
import Indentation from "./Indentation.astro";

import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class=`${layout.section.light}` id="contact">
  <div
    class=`${layout.maxWidth} flex flex-col sm:flex-row justify-between gap-14`
  >
    <div class="relative flex flex-col justify-between w-full sm:max-w-md">
      <div>
        <Typography variant="span">- {t("contact.sectionTitle")}</Typography>
        <Indentation />
        <div class="pt-4 pl-4">
          <Typography variant="h2">
            {t("contact.leftSubtitle")}
          </Typography>
          <Typography>
            {t("contact.leftSubtitle2")}
          </Typography>
        </div>
      </div>
      <a
        href="mailto:borislav.godumov@outlook.com"
        class=`group w-max border-2 border-cyan-600 text-cyan-600 text-xl rounded-lg px-8 py-4 flex gap-4 hover:gap-16 items-center hover:bg-cyan-600 hover:text-white transition-all  ease-in-out`
      >
        <span>{t("contact.CTA")}</span>
        <i class="fa-solid fa-arrow-right rotate-2"></i>
      </a>
    </div>
    <div class="w-full sm:max-w-lg flex flex-col justify-between">
      <div>
        <Typography variant="h2">
          {t("contact.rightSubtitle")}
        </Typography>
        <Typography variant="p" className="sm:!max-w-md">
          {t("contact.rightSubtitle2")}
        </Typography>
      </div>
      <div>
        <div
          class="flex flex-wrap justify-center sm:justify-start items-center gap-12"
        >
          <Typography
            variant="p"
            className="flex items-center flex-col text-xl sm:text-2xl !mb-0"
          >
            <span class="text-cyan-600 text-3xl sm:text-4xl font-bold"
              >100 +</span
            >
            {t("contact.span1")}
          </Typography>
          <Typography
            variant="p"
            className="flex items-center text-xl sm:text-2xl flex-col !mb-0"
          >
            <span class="text-cyan-600 text-3xl sm:text-4xl font-bold"
              >{t("contact.span2")}</span
            >{t("contact.span3")}
          </Typography>
        </div>
      </div>
    </div>
  </div>
</section>
