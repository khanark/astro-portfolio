---
import Typography from "../react/Typography";
import layout, { style } from "../../constants/style";
import { Image } from "astro:assets";
import testimonialImage from "../../assets/Avatar-Shirt_-_Edi_Key_Book_PhotoSession.jpg";

import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class=`${layout.section.dark}`>
  <div class=`${layout.maxWidth}`>
    <Typography variant="span">- {t("demoBlog.sectionTitle")}</Typography>
    <div
      class="flex flex-col md:flex-row justify-between gap-16 md:gap-8 mb-24"
    >
      <div class="w-full md:w-auto">
        <Typography variant="h2">
          {t("demoBlog.subtitle")} <br /> {t("demoBlog.subtitle2")}
        </Typography>
        <a
          href="/blog"
          class=`block md:inline-block text-center md:text-start text-cyan-600 underline underline-offset-4`
          >{t("demoBlog.cta")}</a
        >
      </div>
      <ul class="w-full md:max-w-3xl flex flex-col gap-8">
        <a
          class="flex justify-between items-center pb-8 border-b-[1px] border-cyan-900 cursor-pointer"
        >
          <div class="w-3/4 flex justify-between flex-wrap gap-2">
            <span class=`${style.textSecondary}`>Feb 26 / Blog</span>
            <h3
              class=`${style.textPrimary} text-2xl w-96 font-semibold line-clamp-2`
            >
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Doloribus
              at, totam itaque blanditiis quas sint rem quia culpa eius animi
              fugiat earum, vel quibusdam aliquam amet! Earum magnam nisi quod
              atque vel laborum facere, debitis, asperiores ex saepe eos
              voluptates.
            </h3>
          </div>
          <i class="fa-solid fa-arrow-right text-xl text-cyan-600"></i>
        </a>

        <a
          class="flex justify-between items-center pb-8 border-b-[1px] border-cyan-900 cursor-pointer"
        >
          <div class="w-3/4 flex justify-between flex-wrap gap-2">
            <span class=`${style.textSecondary}`>Feb 26 / Blog</span>
            <h3
              class=`${style.textPrimary} text-2xl w-96 font-semibold line-clamp-2`
            >
              Lorem ipsum dolor sit amet consectetur adipisicing elit.
            </h3>
          </div>
          <i class="fa-solid fa-arrow-right text-xl text-cyan-600"></i>
        </a>

        <a class="flex justify-between items-center pb-8 cursor-pointer">
          <div class="w-3/4 flex justify-between flex-wrap gap-2">
            <span class=`${style.textSecondary}`>Feb 26 / Blog</span>
            <h3
              class=`${style.textPrimary} text-2xl w-96 font-semibold line-clamp-2`
            >
              Lorem ipsum dolor sit amet.
            </h3>
          </div>
          <i class="fa-solid fa-arrow-right text-xl text-cyan-600"></i>
        </a>
      </ul>
    </div>
    <div class="flex flex-col md:flex-row gap-16 items-center justify-between">
      <div
        class="md:flex-shrink-0 w-full sm:w-2/4 md:w-1/3 rounded-lg overflow-hidden bg-blend-screen"
      >
        <Image src={testimonialImage} alt="A bird sitting on a nest of eggs." />
      </div>
      <div class="max-w-3xl">
        <i
          class=`${style.textSecondary} text-5xl md:text-6xl fa-solid fa-quote-left mb-2`
        ></i>
        <Typography
          variant="h2"
          className="text-wrap !text-xl md:!text-2xl !mb-12 !font-normal"
        >
          {t("demoBlog.testimonialText")}
          
        </Typography>
        <p class=`${style.textSecondary} mb-4 text-xl`>{t("demoBlog.testimonialAuthor")}</p>
        <p class=`${style.textSecondary}`>Team Lead</p>
        <a
          class="text-cyan-600 underline underline-offset-4"
          href="https://www.linkedin.com/company/adesso-bulgaria/?originalSubdomain=bg"
          target="_blank">Adesso Bulgaria</a
        >
      </div>
    </div>
  </div>
</section>
